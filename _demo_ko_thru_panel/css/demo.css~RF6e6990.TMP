*
{
    box-sizing: border-box;
}
body
{
	background-color: rgba(0,0,0,1);
	color:rgba(255,255,255,1);
	font-family:'Segoe UI';
	font-size:small;
    margin: 0 auto;
    padding:0;
}
a
{
	color:rgba(192,192,192,1);
	text-decoration:none;
}
a:hover
{
	color:rgba(255,255,255,1);
	text-decoration:none;
}
a:visited
{
	color:rgba(160,160,160,1);
	text-decoration:none;
}

.MainContainer
{
    position:absolute;
    top:0px;
    left:0px;
    right:0px;
    bottom:0px;
    min-width:calc(800px);
    border: solid 0px rgba(255,0,0,1);
    padding:0px;
}
.MainTable
{
    width:calc(100%);
    min-height:calc(100%);
    height:calc(100%);
    padding:0;
    margin:0;
    border: solid 1px rgba(0,255,0,1);
}
.Column
{
    border: solid 0px rgba(0,255,0,1);
    display:inline-block;
    padding:0px;
    min-height:calc(100%);
    height:calc(100%);
    overflow:auto;
    vertical-align:top;
}
.TwoHun
{
    min-width:calc(200px);
    max-width:calc(200px);
}
.FourHun
{
    height:calc(100%);
    min-height:calc(100%);
    min-width:calc(100% - 400px);
    max-width:calc(100% - 400px);
    border-left: solid 1px rgba(0,255,0,1);
    border-right: solid 1px rgba(0,255,0,1);
}
.FocusedHeader
{
    border-bottom: solid 1px rgba(0,255,0,1);
    padding:10px;
}